# Server Configuration
NODE_ENV=development
PORT=5000

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iot_monitoring
DB_USER=iot_user
DB_PASSWORD=iot_password

# InfluxDB Configuration
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=my-super-secret-auth-token
INFLUX_ORG=iot_org
INFLUX_BUCKET=iot_data

# MQTT Broker Configuration
MQTT_BROKER=mqtt://localhost:1883
MQTT_USERNAME=iot_client
MQTT_PASSWORD=mqtt_password
MQTT_CLIENT_ID=iot_backend

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (for alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=IoT Monitoring System <noreply@iot-system.com>

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# WebSocket Configuration
WS_PORT=5000

# Alert Thresholds (default values)
ALERT_CHECK_INTERVAL=60000
ALERT_EMAIL_COOLDOWN=300000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads/